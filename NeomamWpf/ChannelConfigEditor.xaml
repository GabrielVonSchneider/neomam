<UserControl x:Class="NeomamWpf.ChannelConfigEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:NeomamWpf"
    mc:Ignorable="d"
    Background="White"
    d:DataContext="{d:DesignInstance Type=local:ChannelConfigViewModel}" d:DesignHeight="50.96" d:DesignWidth="186.495">
    <UserControl.Resources>
    </UserControl.Resources>
    <WrapPanel Orientation="Horizontal">
        <Label VerticalAlignment="Center">Channel</Label>
        <Label Width="30" VerticalAlignment="Center" Content="{Binding ChannelNumber}" HorizontalContentAlignment="Right"/>
        <CheckBox IsChecked="{Binding Visible}" VerticalAlignment="Center" Margin="3,0,3,0">
            Activated
        </CheckBox>
        <Button Name="OffButton" Width="80" Height="20" HorizontalContentAlignment="Center" Margin="3,0,3,0" Click="OffButton_Click">
            OffColor
        </Button>
        <Button
                Name="OnButton" Width="80" Height="20" HorizontalContentAlignment="Center"
                Click="OnButton_Click" Margin="3,0,3,0"
            >
            On Color
        </Button>
    </WrapPanel>
</UserControl>
